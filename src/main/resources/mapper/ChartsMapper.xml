<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjh.backend.mapper.ChartsMapper">

    <resultMap id="BaseResultMap" type="com.zjh.backend.pojo.entity.Charts">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <id property="name" column="name" jdbcType="VARCHAR"/>
            <result property="goal" column="goal" jdbcType="VARCHAR"/>
            <result property="chartType" column="chartType" jdbcType="VARCHAR"/>
            <result property="userId" column="userId" jdbcType="BIGINT"/>
            <result property="chartData" column="chartData" jdbcType="VARCHAR"/>
            <result property="genChart" column="genChart" jdbcType="VARCHAR"/>
            <result property="genResult" column="genResult" jdbcType="VARCHAR"/>
            <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
            <result property="isDelete" column="isDelete" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,'name',goal,chatType,userId,chartData,
        genChart,genResult,createTime,
        updateTime,isDelete
    </sql>
    <select id="selectChartByChartRequest" resultType="com.zjh.backend.pojo.entity.Charts">
        select * from charts
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="goal != null">
                or goal like concat(%, #{goal}, %)
            </if>
            <if test="chartType != null">
                or chartType like concat(%, #{chartType}, %)
            </if>
            <if test="userId != null">
                and userId = #{userId}
            </if>
        </where>
    </select>
</mapper>
